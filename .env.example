# Copy this file to .env and fill in your values

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=portfolio_chat.settings.local

# Database settings (PostgreSQL)
DB_NAME=portfolio_chat_local
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_HOST=localhost
DB_PORT=5432

# For staging/production (Heroku provides DATABASE_URL)
# DATABASE_URL=postgres://user:password@host:port/database

# Frontend URL for CORS (staging/production)
# FRONTEND_URL=https://your-frontend-domain.com

# Domain settings (staging/production)
# STAGING_DOMAIN=your-staging-app.herokuapp.com
# PRODUCTION_DOMAIN=your-production-domain.com